pipeline{
    agent any

    stages{
        stage('Hello'){
            steps{
                sh'''
                    python3 app.py
                '''
            }
        }

        stage('Middle-stage'){
            steps{
                sh'''
                    echo "middle stage"
                '''
            }
        }

        stage('Final-Stage'){
            steps{
                sh'''
                    echo "Final stage"
                '''
            }
        }

        stage('Docker build'){
            steps{
                sh'''
                    echo "this is just test"
                '''
            }

        }
        
    }
}